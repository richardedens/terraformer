{
    "name": "terraformer",
    "version": "0.0.1",
    "preferGlobal": true,
    "description": "The terraformer project is a NodeJS server application that allows you to create a complete microservice / microapp landscape.",
    "main": "./bin/www",
    "engines": {
        "node": ">=0.9.9"
    },
    "engine-strict": true,
    "bin": {
        "terraformer": "./bin/terraformer"
    },
    "scripts": {
        "ng": "ng",
        "start": "npm-run-all run:start-app",
        "test": "npm-run-all run:tsc-test run:ng-test",
        "build": "npm-run-all run:ng-build run:tsc-build run:ng-merge run:db-sync run:db-migration",
        "prod": "npm-run-all run:ng-build run:tsc-build run:ng-merge run:db-sync run:db-migration run:start-app",
        "prod:db": "npm-run-all run:dbsync run:migration",
        "prod:server": "npm-run-all run:tsc-build run:db-sync run:db-migration run:start",
        "run:start-app": "node ./dist/runtime/src/server",
        "run:ng-test": "cd ./src/frontoffice/app/ && ng test && cd ../../../",
        "run:ng-e2e": "cd ./src/frontoffice/app/ && ng e2e && cd ../../../",
        "run:ng-build": "cd ./src/frontoffice/app/ && ng build && cd ../../../",
        "run:ng-merge": "node ./dist/frontoffice/utils/fosync",
        "run:tsc-build": "tsc",
        "run:tsc-test": "mocha -r ts-node/register src/runtime/test/**/*.spec.ts",
        "run:db-sync": "node ./dist/runtime/db/dbsync",
        "run:db-migration": "ts-node ./node_modules/typeorm/cli.js migration:run"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/richardedens/terraformer.git"
    },
    "bugs": {
        "url": "https://github.com/richardedens/terraformer/issues"
    },
    "keywords": [
        "terraformer",
        "webapp",
        "app",
        "low-code",
        "platform"
    ],
    "author": "Gerhard Richard Edens",
    "license": "MIT",
    "homepage": "https://terraformer.app/",
    "nodemonConfig": {
        "restartable": "rs",
        "ignore": [
            "node_modules/**/node_modules"
        ],
        "delay": "2500",
        "env": {
            "NODE_ENV": "development",
            "PORT": 3000
        }
    },
    "dependencies": {
        "@angular/animations": "^8.2.5",
        "@angular/cdk": "^8.1.4",
        "@angular/common": "~8.2.5",
        "@angular/compiler": "~8.2.5",
        "@angular/core": "~8.2.5",
        "@angular/forms": "~8.2.5",
        "@angular/material": "^8.1.4",
        "@angular/platform-browser": "~8.2.5",
        "@angular/platform-browser-dynamic": "~8.2.5",
        "@angular/router": "~8.2.5",
        "@types/connect-ensure-login": "^0.1.5",
        "async": "^3.2.2",
        "bcryptjs": "^2.4.3",
        "bluebird": "^3.5.5",
        "chalk": "^2.4.2",
        "chart.js": "^2.8.0",
        "class-validator": "^0.10.0",
        "clear": "^0.1.0",
        "compression": "^1.7.4",
        "connect-ensure-login": "^0.1.1",
        "cookie-parser": "~1.4.4",
        "core-js": "^3.2.1",
        "cors": "^2.8.5",
        "debug": "~4.1.1",
        "dotenv": "^8.1.0",
        "express": "~4.17.1",
        "express-jwt": "^5.3.1",
        "express-session": "^1.16.2",
        "figlet": "^1.2.4",
        "helmet": "^3.21.0",
        "http-errors": "~1.7.3",
        "https": "^1.0.0",
        "jsonwebtoken": "^8.5.1",
        "mongodb": "^3.3.2",
        "morgan": "~1.9.1",
        "mssql": "^5.1.0",
        "mysql": "^2.17.1",
        "node-sass-middleware": "0.11.0",
        "npm-run-all": "^4.1.5",
        "officegen": "^0.6.3",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "prompt": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "request": "~2.87.0",
        "rxjs": "~6.5.3",
        "sqlite3": "^4.1.0",
        "tempfile": "^3.0.0",
        "ts-node-dev": "^1.0.0-pre.32",
        "tslib": "^1.10.0",
        "twig": "^1.13.3",
        "typeorm": "^0.2.18",
        "typeorm-encrypted": "^0.5.1",
        "when": "^3.7.8",
        "zone.js": "~0.9.1",
        "typescript": "^3.5.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.803.3",
        "@angular/cli": "~8.3.3",
        "@angular/compiler-cli": "~8.2.5",
        "@angular/language-service": "~8.2.5",
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.1",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/express-session": "^1.15.14",
        "@types/fs-extra": "^8.0.0",
        "@types/helmet": "0.0.44",
        "@types/http-errors": "^1.6.2",
        "@types/jasmine": "^3.4.0",
        "@types/jasminewd2": "~2.0.6",
        "@types/jsonwebtoken": "^8.3.3",
        "@types/mendixmodelsdk": "^0.8.1",
        "@types/mocha": "^5.2.7",
        "@types/morgan": "^1.7.37",
        "@types/node": "^12.7.4",
        "@types/node-sass-middleware": "0.0.31",
        "@types/office-js": "^1.0.36",
        "@types/passport": "^1.0.1",
        "@types/passport-local": "^1.0.33",
        "@types/protractor": "^4.0.0",
        "chai": "^4.2.0",
        "codelyzer": "~5.1.0",
        "eslint": "^6.3.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-plugin-import": "^2.18.2",
        "fs-extra": "^8.1.0",
        "jasmine-core": "~3.4.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~4.3.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~2.1.0",
        "karma-jasmine": "~2.0.1",
        "karma-jasmine-html-reporter": "^1.4.2",
        "mocha": "^6.2.0",
        "protractor": "~5.4.2",
        "ts-node": "^8.3.0",
        "tslint": "~5.19.0"
    }
}
