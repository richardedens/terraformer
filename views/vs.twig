<!DOCTYPE html>
<html>
    <head>
        <meta content="IE=edge" http-equiv="X-UA-Compatible"/>
        <meta content="terraformer" name="description">
        <meta content="Gerhard Richard Edens" name="author">
        <meta content="text/html;charset=utf-8" http-equiv="Content-Type">
        <style>
            type="text/css" html,
            body {
                width: 100%;
                height: 100%;
                margin: 0;
                padding: 0;
                overflow: hidden;
            }
        </style>
    </head>
    <body>
        <div id="container" style="width:100%;height:100%"></div>
        <script src="js/vs/loader.js"></script>
        <script>
            require.config({
                paths: {
                    'vs': 'js/vs'
                }
            });
            require(['vs/editor/editor.main'], function () { // Register a new language for writing user stories.
                var editor = monaco.editor.create(document.getElementById('container'), {
                    value: '',
                    language: 'typescript'
                });
                window.onresize = function () {
                    editor.layout();
                };
            });
        </script>
    </body>
</html>
